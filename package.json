{
    "name": "expressplate",
    "version": "1.1.0",
    "description": "Express.js REST API opinionated boilerplate",
    "author": "piotr@piech.dev",
    "license": "UNLICENSED",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Tenemo/expressplate.git"
    },
    "bugs": {
        "url": "https://github.com/Tenemo/expressplate/issues"
    },
    "homepage": "https://github.com/Tenemo/expressplate#readme",
    "engines": {
        "node": ">=16.14"
    },
    "scripts": {
        "start": "node dist/server.js",
        "prebuild": "npm run eslint:fix && npm run tsc && npm test && npm run cleanDist",
        "build": "cross-env NODE_ENV=production babel --extensions '.ts' src --out-dir dist",
        "build:skip": "npm run cleanDist && cross-env NODE_ENV=production babel --extensions '.ts' src --out-dir dist",
        "cleanDist": "rimraf ./dist && mkdir dist",
        "nodemon": "nodemon",
        "dev:ts": "ts-node --transpile-only src/server.ts",
        "eslint": "eslint . --ext js,ts",
        "eslint:fix": "eslint . --ext js,ts --fix",
        "postinstall": "husky install",
        "tsc": "tsc",
        "test": "cross-env NODE_ENV=test jest --passWithNoTests",
        "test:coverage": "npm run test -- --coverage",
        "test:watch": "npm run test -- --watch"
    },
    "dependencies": {
        "@sinclair/typebox": "^0.28.14",
        "cookie-parser": "^1.4.6",
        "cors": "^2.8.5",
        "cross-env": "^7.0.3",
        "dotenv": "^16.1.3",
        "env-schema": "^5.2.0",
        "express": "^4.18.2",
        "express-winston": "^4.2.0",
        "http-errors": "^2.0.0",
        "joi": "^17.9.2",
        "morgan": "^1.10.0",
        "parse-database-url": "^0.3.0",
        "rimraf": "^5.0.1",
        "winston": "^3.9.0",
        "winston-daily-rotate-file": "^4.7.1"
    },
    "devDependencies": {
        "@babel/cli": "^7.21.5",
        "@babel/core": "^7.22.1",
        "@babel/node": "^7.22.1",
        "@babel/preset-env": "^7.22.4",
        "@babel/preset-typescript": "^7.21.5",
        "@types/cookie-parser": "^1.4.3",
        "@types/cors": "^2.8.13",
        "@types/eslint": "^8.40.0",
        "@types/eslint-plugin-prettier": "^3.1.0",
        "@types/express": "^4.17.17",
        "@types/http-errors": "^2.0.1",
        "@types/jest": "^29.5.2",
        "@types/morgan": "^1.9.4",
        "@types/node": "^20.2.5",
        "@types/npm": "^7.19.0",
        "@types/prettier": "^2.7.3",
        "@typescript-eslint/eslint-plugin": "^5.59.8",
        "@typescript-eslint/parser": "^5.59.8",
        "babel-jest": "^29.5.0",
        "babel-plugin-module-resolver": "^5.0.0",
        "core-js": "^3.30.2",
        "eslint": "^8.41.0",
        "eslint-config-prettier": "^8.8.0",
        "eslint-import-resolver-babel-module": "^5.3.2",
        "eslint-import-resolver-typescript": "^3.5.5",
        "eslint-plugin-import": "^2.27.5",
        "eslint-plugin-jest": "^27.2.1",
        "eslint-plugin-prettier": "^4.2.1",
        "eslint-plugin-sql": "^2.3.2",
        "husky": "^8.0.3",
        "jest": "^29.5.0",
        "jest-cli": "^29.5.0",
        "nodemon": "^2.0.22",
        "ts-node": "^10.9.1",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.1.3"
    }
}
